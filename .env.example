# Required
GROQ_API_KEY=your_groq_key_here
GOOGLE_API_KEY=your_google_key_here

# Optional security (recommended for LAN access)
API_KEY=

# Models
GROQ_MODEL=meta-llama/llama-4-scout-17b-16e-instruct
GOOGLE_MODEL=gemini-2.0-flash

# Scheduling and retention
TIMEZONE=America/New_York
CAPTURE_INTERVAL_MIN=10
RETENTION_DAYS=14
RETENTION_MIN_SNAPSHOTS=10

# Data paths
DATA_DIR=/data
CAPTURE_OUTPUT_DIR=./data/snapshots

# Camera settings
CAMERA_SOURCE=windows-host
CAMERA_HTTP_URL=
CAMERA_RTSP_URL=
CAPTURE_DEVICE_NAME=USB Camera
FFMPEG_PATH=C:\\ffmpeg\\bin\\ffmpeg.exe

# Snapshot settings
SNAPSHOT_WIDTH=
SNAPSHOT_QUALITY=85
MAX_FILE_SIZE_MB=10
IMAGE_MIN_WIDTH=320
IMAGE_MIN_HEIGHT=240
IMAGE_MAX_WIDTH=4096
IMAGE_MAX_HEIGHT=4096
MOTION_DETECTION_ENABLED=false
MOTION_DETECTION_THRESHOLD=5
DARK_FRAME_CHECK=false
TAGGING_ENABLED=true

# API rate limiting
GROQ_RATE_LIMIT_RPM=30
GEMINI_RATE_LIMIT_RPM=15
API_RETRY_MAX_ATTEMPTS=3
API_RETRY_BASE_DELAY=2
API_CIRCUIT_BREAKER_THRESHOLD=5

# UI
UI_REFRESH_INTERVAL_SEC=30
PREVIEW_COOLDOWN_SEC=5

# Ask the feed
ASK_ENABLED=true
ASK_LOOKBACK_HOURS=24
ASK_MAX_ITEMS=40

# Logging
LOG_LEVEL=INFO

# Cost tracking (USD per 1M tokens)
GROQ_COST_PER_MILLION_INPUT=0
GROQ_COST_PER_MILLION_OUTPUT=0
GEMINI_COST_PER_MILLION_INPUT=0
GEMINI_COST_PER_MILLION_OUTPUT=0
